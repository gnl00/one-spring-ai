# NOTE: You must disable the banner and the console logging
# to allow the STDIO transport to work !!!

logging:
  level:
    root: off

server:
  port: 8080
spring:
  main:
    banner-mode: off
    web-application-type: none
  ai:
    openai:
      api-key: sk-xxx
      base-url: https://api.com/v1
    anthropic:
      api-key: sk-xxx
      base-url: https://api.com/v1
    mcp:
      server:
        name: stdio-mcp-server
        stdio: true
        version: 0.0.1

